<h3 class="ui header">{{t "forms.i-i-s-legkaaya-животные-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерЖивотного
      class=(if (v-get validationModel "номерЖивотного" "isInvalid") "error")
      label=(t "forms.i-i-s-legkaaya-животные-e.номерЖивотного-caption")
      data-test-i-i-s-legkaaya-животные-e-номерЖивотного=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерЖивотного" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кличка
      class=(if (v-get validationModel "кличка" "isInvalid") "error")
      label=(t "forms.i-i-s-legkaaya-животные-e.кличка-caption")
      data-test-i-i-s-legkaaya-животные-e-кличка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кличка" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-legkaaya-животные-e.сотрудник-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудник
      displayAttributeName="фамилия"
      autocomplete=true
      relationName="сотрудник"
      projection="СотрудникL"
      title=(t "forms.i-i-s-legkaaya-животные-e.сотрудник-caption")
      readonly=readonly
      componentName="сотрудникLookup"
      class=(if (v-get validationModel "сотрудник" "isInvalid") "error")
      data-test-i-i-s-legkaaya-животные-e-сотрудник=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудник" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-legkaaya-животные-e.сведения-caption"}}</label>
    {{flexberry-groupedit
      componentName="сведенияGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.сведения
      content=model.сведения
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "сведения" "isInvalid") "error")
      data-test-i-i-s-legkaaya-животные-e-сведения=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сведения" "message")}}
  </div>
</form>
