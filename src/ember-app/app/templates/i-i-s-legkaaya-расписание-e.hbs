<h3 class="ui header">{{t "forms.i-i-s-legkaaya-расписание-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.времяУборки
      class=(if (v-get validationModel "времяУборки" "isInvalid") "error")
      label=(t "forms.i-i-s-legkaaya-расписание-e.времяУборки-caption")
      data-test-i-i-s-legkaaya-расписание-e-времяУборки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяУборки" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.времяКормления
      class=(if (v-get validationModel "времяКормления" "isInvalid") "error")
      label=(t "forms.i-i-s-legkaaya-расписание-e.времяКормления-caption")
      data-test-i-i-s-legkaaya-расписание-e-времяКормления=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяКормления" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-legkaaya-расписание-e.корм-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.корм
      displayAttributeName="название"
      autocomplete=true
      relationName="корм"
      projection="КормL"
      title=(t "forms.i-i-s-legkaaya-расписание-e.корм-caption")
      readonly=readonly
      componentName="кормLookup"
      class=(if (v-get validationModel "корм" "isInvalid") "error")
      data-test-i-i-s-legkaaya-расписание-e-корм=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "корм" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-legkaaya-расписание-e.животные-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.животные
      displayAttributeName="кличка"
      autocomplete=true
      relationName="животные"
      projection="ЖивотныеL"
      title=(t "forms.i-i-s-legkaaya-расписание-e.животные-caption")
      readonly=readonly
      componentName="животныеLookup"
      class=(if (v-get validationModel "животные" "isInvalid") "error")
      data-test-i-i-s-legkaaya-расписание-e-животные=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "животные" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-legkaaya-расписание-e.клетка-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клетка
      displayAttributeName="тип"
      autocomplete=true
      relationName="клетка"
      projection="КлеткаL"
      title=(t "forms.i-i-s-legkaaya-расписание-e.клетка-caption")
      readonly=readonly
      componentName="клеткаLookup"
      class=(if (v-get validationModel "клетка" "isInvalid") "error")
      data-test-i-i-s-legkaaya-расписание-e-клетка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клетка" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.клетка.номерКлетки
      class=(if (v-get validationModel.клетка "номерКлетки" "isInvalid") "error")
      label=(t "forms.i-i-s-legkaaya-расписание-e.клетка.номерКлетки-caption")
      data-test-i-i-s-legkaaya-расписание-e-клетка-номерКлетки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.клетка "номерКлетки" "message")}}
  </div>
</form>
